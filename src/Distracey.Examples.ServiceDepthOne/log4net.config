<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Distracey.Examples.Website.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="1MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5level %date [%thread] %-22.22c{1} - %m%n" />
    </layout>
  </appender>

  <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[ServiceDepthOne] (LOGGER) %-5level %date [%thread] %-22.22c{1}  - %m%n      X-B3-TraceId=%property{X-B3-TraceId}%n      X-B3-SpanId=%property{X-B3-SpanId}%n      X-B3-ParentSpanId=%property{X-B3-ParentSpanId}%n      X-B3-Sampled=%property{X-B3-Sampled}%n      X-B3-Flags=%property{X-B3-Flags}%n"/>
    </layout>
  </appender>

  <!--<appender name="GelfUdpHostNameAppender" type="Gelf4net.Appender.GelfUdpAppender, Gelf4net">
    <remoteHostName value="nl-ams-logsearch"/>
